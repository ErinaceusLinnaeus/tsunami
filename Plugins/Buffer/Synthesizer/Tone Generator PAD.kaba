float gauss(float x)
	return exp(- x*x)

void ProcessTrack(BufferBox buf)
	AudioFile *a = audio
	
	complex c[]
	float amp[]
	c.resize(buf.num / 2 - 1)
	amp.resize(buf.num / 2 - 1)
	
	float w = i2f(buf.num) / a.sample_rate
	for int i, 0, amp.num
		float freq = i2f(i) / w
		amp[i] = gauss((freq - data.Frequency) * 0.1)
	for int i, 0, amp.num
		freq = i2f(i) / w
		amp[i] += gauss((freq - data.Frequency * 2) * 0.04) * 0.03
	for int i, 0, amp.num
		freq = i2f(i) / w
		amp[i] += gauss((freq - data.Frequency * 3) * 0.02) * 0.01
	for int i, 0, amp.num
		freq = i2f(i) / w
		amp[i] += gauss((freq - data.Frequency * 4) * 0.01) * 0.002
		
	for int i, 0, c.num
		float phi = rand(2 * pi)
		c[i] = complex(cos(phi), sin(phi)) * amp[i]
	fft_c2r_inv(c, buf.r)
	for int i, 0, c.num
		float phi = rand(2 * pi)
		c[i] = complex(cos(phi), sin(phi)) * amp[i]
	fft_c2r_inv(c, buf.l)
	
	float m = 0
	for int i, 0, buf.num
		m = max(buf.r[i], m)
	print m
	buf.r /= (m * 1.2)
	buf.l /= (m * 1.2)

