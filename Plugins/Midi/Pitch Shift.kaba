use "../api.kaba"

const string AutoConfigPitch = "-50:50:1:1:"

class Config : PluginData
	float Pitch
	
	overwrite void reset()
		Pitch = 0

class PitchShift : MidiEffect
	Config config
	
	overwrite void process(MidiData midi)
		AudioFile *a = plugin_context.track.root
		for n in midi.note
			n.pitch += config.Pitch
