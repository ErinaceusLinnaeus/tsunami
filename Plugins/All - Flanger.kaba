void ProcessTrack(BufferBox buf, Track t, int level)
	InitState(t)
	
	AudioFile *a = t.root
	DoFlanger(buf.r, state.temp_r, a.sample_rate)
	DoFlanger(buf.l, state.temp_l, a.sample_rate)
	
	ClearState()

