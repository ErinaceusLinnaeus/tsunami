#include "api.kaba"

bool not_first_time


window FlangerDialog

class PluginData
	float Delay
	float Speed
	float Depth

PluginData data

void ResetData()
	data.Depth = 0.5
	data.Speed = 0.3
	data.Delay = 0.01

class PluginState
	float temp_r[]
	float temp_l[]
	int delay_samples

PluginState state

void InitState(Track t)
	AudioFile *a = t.root
	state.delay_samples = a.sample_rate * data.Delay + 1
	state.temp_r.resize(state.delay_samples)
	state.temp_l.resize(state.delay_samples)

void ClearState()
	state.temp_r.clear()
	state.temp_l.clear()

void OnSpeed()
	data.Speed = SliderGet(FlangerDialog, "speed")

void OnDepth()
	data.Depth = SliderGet(FlangerDialog, "depth")

void OnDelay()
	data.Delay = SliderGet(FlangerDialog, "delay")

void DoFlanger(float b[], float temp[], int sample_rate)
	temp = 0
	int p = 0
	
	float f_a = (1 - 0.5 * data.Depth) * data.Delay
	float f_b = 0.5 * data.Depth * data.Delay
	float f_c = 1.0 / sample_rate * 2 * pi * data.Speed
	
	for int i, 0, b.num
	
		// old value
		temp[p] = b[i]
		
		// shift
		float dt = f_a - cos(i * f_c) * f_b
		int dp = dt * sample_rate
		int p2 = p - dp
		if p2 < 0
			p2 += state.delay_samples
		
		// add echo
		b[i] += temp[p2]
		//clampf(b[i], -1, 1)
		
		p ++
		if p >= state.delay_samples
			p = 0

