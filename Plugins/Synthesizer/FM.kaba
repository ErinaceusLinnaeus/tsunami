	void __assign__(FMConfig o)

class OscillatorState
	float phi, inp
	float last_before_release

class NoteState
	OscillatorState osc[NUM_OSCILLATORS]

class FMState
	NoteState note[128]
	void reset()
		for int i, 0, 128
			for int j, 0, NUM_OSCILLATORS
				note[i].osc[j].inp = 0
				note[i].osc[j].phi = 0
	void __init__()
		reset()
	void __assign__(FMState o)

Dialog *cur_dlg

