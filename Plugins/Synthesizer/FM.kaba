		for int j, 0, NUM_OSCILLATORS
			osc[j].factor = 1
			osc[j].amplitude = 0
			osc[j].attack = 0.01
			osc[j].decay = 0.4
			osc[j].release = 0.4
			osc[j].initial = 0.01
			osc[j].peak = 1
			osc[j].sustain = 0.6
		osc[0].factor = 1
		osc[0].amplitude = 0.5
