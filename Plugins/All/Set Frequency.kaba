use "../api.kaba"

Window *dlg

void OnOk()
	audio.sample_rate = dlg.getInt("freq")
	delete dlg

void OnClose()
	delete dlg

void main()
	dlg = new FixedDialog("Frequenz", 210, 65, MainWin, false)
	dlg.addEdit("", 5, 5, 200, 25, "freq")
	dlg.addButton("Abbrechen", 5, 35, 100, 25, "cancel")
	dlg.addDefButton("Ok", 110, 35, 95, 25, "ok")
	
	dlg.eventS("ok", &OnOk)
	dlg.eventS("cancel", &OnClose)
	dlg.eventS("hui:close", &OnClose)
	
	dlg.setInt("freq", audio.sample_rate)
	
	dlg.run()
