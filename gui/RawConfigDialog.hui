Dialog raw_config_dialog "Raw Datei" width=300 height=100
	Grid ? "" vertical
		Grid ? ""
			Text t_format "Format"
			ComboBox format "" expandx
			---|
			Text t_channels "Channels"
			Grid ? ""
				RadioButton channels:mono "Mono"
				RadioButton channels:stereo "Stereo"
			---|
			Text t_samplerate "Samplerate"
			SpinButton sample_rate "44100" range=1:
		Grid ? "" buttonbar
			Button /cancel "Cancel"
			Button /ok "OK"
