Dialog pause_add_dialog "new pause" 250 80
	Grid ? "" 1 3
		Grid ? "" 3 1
			Text t_duration "Duration"
			SpinButton duration "1.0\\0\\10000\\0.001" expandx
			Text t_s "s"
		Grid ? "" 2 1
			RadioButton insert:before "before"
			RadioButton insert:after "after"
		Grid ? "" 2 1 buttonbar
			Button /cancel "Cancel" image=hui:cancel
			DefButton /ok "OK" image=hui:ok
