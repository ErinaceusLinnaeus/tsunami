Dialog midi_editor "Midi" 380 516
	Grid ? "" 1 2
		Grid me_grid_no "" 1 1
			Text ld_t_no_midi "keine Midi-Spur ausgewählt"
		Grid me_grid_yes "" 1 4
			Group me_group_view "Ansicht"
				Grid ? "" 2 3
					Text ld_t_pitch "Pitch"
					SpinButton pitch_offset "60\\0\\90" expandx
					Text ld_t_partition "Unterteilung"
					SpinButton beat_partition "4\\1\\256"
					Text ld_t_scale "Tonleiter"
					ComboBox scale ""
			Group me_group_chord "Akkord"
				Grid ? "" 1 4
					RadioButton midi_mode:note "Einzeltöne"
					RadioButton midi_mode:chord "Akkord"
					Grid ? "" 3 2
						Text ld_t_space "" width=12
						Text ld_t_chord "Typ"
						ComboBox chord_type "" expandx
						.
						Text ld_t_inversion "Umkehrung"
						ComboBox chord_inversion ""
			Group me_group_reference "Referenz-Spur"
				ComboBox reference_track ""
			Group me_group_edit "Bearbeiten"
				Grid ? "" 3 1
					Button edit_song "Datei"
					Button edit_track "Spur"
					Button edit_midi_fx "Midi-Fx"

