use tsunami.*

let AUTO_CONFIG_VOLUME = "volume,range=0:4"
	
class Volume extends AudioEffect

	class Config extends Module.Config
		var volume: float
	
		func override reset()
			volume = 1

	var config: Config
	
	func override process(out buf: AudioBuffer)
		let factor = config.volume
		for mut cc in buf.c
			for mut b in cc
				b = clamp(b * factor, -1, 1)
